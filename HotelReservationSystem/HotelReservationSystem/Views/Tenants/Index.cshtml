@model List<Tenant>
@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<table class="table table-dark">
    <thead>
        <tr>
            <td>Id</td>
            <td>FirstName</td>
            <td>LastName</td>
            <td>RoomId</td>
            <td>RoomFloor</td>
            <td>RoomNo.</td>
        </tr>
    </thead>
    @foreach (var tenant in Model)
    {
<tr>
    <td>@tenant.Id</td>
    <td>@tenant.FirstName</td>
    <td>@tenant.LastName</td>
    <td>@tenant.RoomId</td>
    <td>@tenant.Room.RoomFloor</td>
    <td>@tenant.Room.RoomNo</td>
    <td><a asp-action="Edit" asp-route-id="@tenant.Id">Edit</a></td>
    <td><a asp-action="Delete" asp-route-id="@tenant.Id">Delete</a></td>

</tr>
    }
</table>

<a asp-action="Create" class="btn btn-success">Add New Tenant</a>