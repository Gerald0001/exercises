@model Room
<form method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="RoomNo"></label>
                <input type="text" asp-for="RoomNo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RoomFloor"></label>
                <input type="text" asp-for="RoomFloor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RoomType"></label>
                <input type="text" asp-for="RoomType" class="form-control" />
            </div>
        </div>
    </div>
    <button class="btn btn-success">Update</button>
</form>